.panel-heading
  %h3.panel-title Claim Audit Entry
.panel-body
  %table
    %tr
      %td
        %b
          Time Period
      %td
        %span{style:"margin-left:10px;"} From:
        %input{readonly:"readonly",:value=>above_var_list[:from_date]} 
        %span{style:"margin-left:10px;"} To:
        %input{readonly:"readonly",:value=>above_var_list[:to_date]}
    %tr
      %td
        %b
          Estimator
      %td
        %input{:style=>"margin-left:46px",readonly:"readonly",:value=>above_var_list[:estimator]}
    %tr
      %td
        %b
          Carrier
      %td
        %input{:style=>"margin-left:46px",readonly:"readonly",:value=>above_var_list[:carrier]}
    %tr
      %td
        %b
          Count:
      %td
        %input{:style=>"margin-left:46px",readonly:"readonly",:value=>above_var_list[:count]}
    %tr
      %td
        %b
          Severity:
      %td
        / %input{:style=>"margin-left:46px",readonly:"readonly",:value=>above_var_list[:severity]}
    %tr
      %td
        %b
          Average time:
      %td
        / %input{:style=>"margin-left:46px",readonly:"readonly",:value=>above_var_list[:average_time]}     
%table.table.table-pointer.table-striped.table-bordered.table-hover
  %tr
    %th Claim No.
    %th Claim Type
    %th Carrier
    %th Severity
    %th Time
    %th Date
    %th Estimator
    %th Adm
    %th Comp
    %th Est
    %th Total
    %th Leak

  
  - claim_audit_entry.each do |claim_audit_entry|
    - estimate_date(claim_audit_entry.claim)
    - entry_scores_find(claim_audit_entry.claim)
    %tr{:onclick => "window.location.href='#{estimator_claim_audit_list_show_saved_audit_estimate_path(:c_num => claim_audit_entry.claim, :c_type => @claim_type, :carrier => claim_audit_entry.carrier_branch.name, :estimate_date=>@estimate_date,:total => '')}'"}
      %td
        = claim_audit_entry.claim
      %td
        = @claim_type
      %td
        = claim_audit_entry.carrier_branch.name
      %td
        = ""
      %td
        = ""
      %td
        = @claim_admin_score
      %td
        = @claim_compliance_score
      %td
        = @claim_estimating_score
      %td
        = @claim_overall_score
      %td
        = @claim_leakage_amount