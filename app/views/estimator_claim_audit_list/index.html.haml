.seal-module.seal-panel.panel.panel-default.large#Main_content_list
  .panel-heading
    %h3.panel-title Estimator Claim Audits List
  .panel-body
    .row
      .col-md-2
        %label Time period:
      .col-md-3
        %label From
        %input{readonly: "readonly", size: "24", id:"fromdate_estimator", type: "text"}/
      .col-md-3
        %label To
        %input{readonly: "readonly", size: "24", id:"todate_estimator", type: "text"}/
    %br
    .row
      .col-md-2
        %label  Estimator:
      .col-md-3
        = select_tag "estimator", options_for_select(@claim_estimator.collect{ |u| [u.first_name, u.id]}),:prompt => 'Select Estimator', :class => "form-control", :required => true
    %br
    .row
      .col-md-2
        %label Carrier(optional):
      .col-md-3
        = select_tag "carrier", options_for_select(@carrier_branch.collect{ |u| [u.name, u.id]}),:prompt => 'Select Carrier',  :required => true, :class => "form-control" 
    %br
    .row
      .col-md-2
      .col-md-3
        %a#submit_to_filter_audit{:class=>"btn btn-default btn-sm btn-info pull-right"} Continue