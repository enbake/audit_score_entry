= form_for @css,:url => {:action => "create"}  do |f|
  = hidden_field_tag "answer_fields", params["1"].to_json
  .seal-module.seal-panel.panel.panel-default.large
    .panel-heading
      %h3.panel-title Call Audit Score Entry
    %a#go_back_to_edit{class:"btn btn-mini btn-info pull-right"} Edit
    .panel-body
      %table{style:"width:35%"}
        %tr
          %td 
            %b
              CSS:
          %td
            = "Malane Thomas"
        %tr
          %td 
            %b
              Month:
          %td
            = "January 2014"
        %tr
          %td 
            %b
              Date Review:
          %td
            = "02/02/2013" 
            by
            %b
              = "CORY SHUPAY"
      %table.table{style:"margin-top:2%;margin-left:1%;width:100%;font-size:12px"}
        %tr
          %th Call Audit Scores
          %th #Calls
          %th #Reviwed
          %th Intro
          %th Description
          %th Call to Action
          %th General Demeanor
          %th Address Concerns
          %th Composite Score
        %tr
          %td 
            %b 
              Current Month
          %td 
            = "calls"
          %td 
            = "reviewe"
          %td 
            = "intro"
          %td 
            = "description"
          %td 
            = "calls_to_action"
          %td 
            = "gnrl_dnmr"
          %td 
            = "address_concern"
          %td 
            = "smpst_scr"
        %tr
          %td 
            %b
              Current Month
          %td 
            = "calls"
          %td 
            = "reviewe"
          %td 
            = "intro"
          %td 
            = "description"
          %td 
            = "calls_to_action"
          %td 
            = "gnrl_dnmr"
          %td 
            = "address_concern"
          %td 
            = "smpst_scr"
      .confirm_block.panel-body
        %table.table
          %tr
            %th Category
            %th Grade 1-5
            %th Notes
          - params["1"].each do |question|
            %tr
              %td
                = question[1][:question]
              %td 
                = question[1][:grade]
              %td
                = question[1][:note]
        = link_to "Next", "#", :class => "btn btn-default btn-sm btn-info pull-right", :id => "confirm_block_id"
      .summary_block.panel-body{style: "display:none;"}
        %div
          %div{:style => "width:70%;float:left"}
            %table.table
              %tr
                %h3.text-center
                  %b
                    Summary
              %tr
                %th Category
                %th Grade
                %th Weight
                %th Score
                %th Possible
                %th Percent
              - weight_num = (-1)
              - tab = 0
              - score_total = 0
              - possible_total = 0
              - percent_total = 0
              - params["1"].each do |question|
                -weight_num +=1
                -tab +=1
                %tr
                  %td
                    = question[1][:question]
                  %td 
                    = question[1][:grade]
                  %td
                    = question[1][:weight]
                  %td
                    - score = question[1][:grade].to_i * question[1][:weight].to_i
                    = score
                    - score_total += score
                  %td
                    - possible_score = 5 * question[1][:weight].to_i
                    = possible_score
                    - possible_total += possible_score
                  %td
                    - percent = (score*100)/possible_score
                    = percent
                    - percent_total += percent
              %tr
                %td
                  Total
                %td
                
                %td
              
                %td
                  =score_total
                  = hidden_field_tag "call_audit_score_entry[total_score]",score_total
                %td
                  =possible_total
                  = hidden_field_tag "call_audit_score_entry[total_possible_score]",possible_total
                %td
                  - overall = (percent_total/params["1"].count)
                  = overall
                  = hidden_field_tag "call_audit_score_entry[overall_score]",overall
        %div
          %h1.text-center.pull-right{:style => "margin-top:5%;width:30%"}
            %b
              OVERALL SCORE
              %br
              = overall.to_s + "%"
      %table.summary_block{style: "display:none"}
        %tr
          %td{style: "width:70%"}
            = text_area_tag 'comment', nil, size: "92x2",style:"resize:none; width:100%",placeholder: "Comment";
            = text_area_tag 'strengths', nil, size: "92x2",style:"resize:none; width:49%;margin-top:.5%",placeholder: "Strengths";
            = text_area_tag 'development_needs', nil, size: "92x2",style:"resize:none; width:49%;margin-top:.5%",placeholder: "Development Needs",:class => "pull-right", reuired:"required";
          %td
            = submit_tag "Continue", :class=>"btn btn-default btn-sm btn-info pull-right", :id => "submit_to_filter_audit", :style => "margin-left:12%"
           
