= form_tag({:action => 'new'}, {:multipart => true,:id=>"add_file_call_entry",novalidate: true}) do
  .seal-module.seal-panel.panel.panel-default.large
    .panel-heading
      %h3.panel-title New Call Audit Score Entry
    .panel-body
      %table{cellpadding:"8"}
        %tr
          %td 
            %b
              Business Unit:
          %td
            = select_tag "business_unit", options_for_select(@business_unit.collect{ |u| [u.name, u.id]}),:prompt => 'Select Business Unit', :class => "sel_ans form-control", :required => true
        %tr
          %td 
            %b
              CSS:
          %td
            = select_tag "css", options_for_select(@css.collect{ |u| [u.first_name, u.id]}),:prompt => 'Select Css', :class => "sel_ans form-control", :required => true
        %tr
          %td 
            %b
              Call Date/Time:
          %td
            = text_field_tag "call_date", "", :class => "sel_ans form-control", :required => true
          %td
            = time_select("call_time",'', {ampm: true,:default=>Time.now})
        %tr
          %td 
            %b
              Import wav file:
          %td
            = file_field_tag 'attachment',:id=>Time.now,:multipart=>true, :class =>"sel_ans"

  = submit_tag "Continue", :id=>"new_call_audit",:class => "btn btn-default btn-sm btn-info"

