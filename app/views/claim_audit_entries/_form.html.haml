= form_for @claim_audit_entry, :url => {:action => "confirm_data"}, :method => "post", :html => {:id => "in_fo"} do |f|
  .well-lg{:style => "background:white"}
    %table{style:"width:35%;"}
      %tr
        %td 
          %b
            Estimator:
        %td
          = estimitor_find(@estimator)
          = hidden_field_tag "estimator", @estimator
      %tr
        %td 
          %b
            Claim#:
        %td
          = "#{@claim} #{@claim_type}"
          = hidden_field_tag "claim", @claim
          = hidden_field_tag "claim_type",@claim_type
          = hidden_field_tag "claim_awaiting_id",@claim_awaiting_id
      %tr
        %td 
          %b
            Carrier:
        %td
          = carrier_name_find(@carrier)
          = hidden_field_tag "carrier", @carrier
      %tr
        %td 
          %b
            Estimate Date:
        %td
          = @estimate_date
          = hidden_field_tag "estimate_date", @estimate_date
      %tr
        %td 
          %b
            Reviewer:
        %td
          - if employee_master_signed_in?
            = current_employee_master.name
          = f.hidden_field :review,:value=>Date.today
      %tr
        %td 
          %b
            Estimate Total:
        %td
          = "$#{@total}"
          = "in #{params[:duration_net]} min"
          = hidden_field_tag "total", @total
          = hidden_field_tag "duration_net",params[:duration_net]
      - tab = 0
      - row = 0
    .adm_com
      %table.table
        %tr
          %th Question
          %th Answer
          %th Exception
          %th Notes
        - @questions1.each do |questions|
          - tab +=1
          %tr
            %td
              %b
                = questions[0]
          - questions[1].each do |question|
            - row += 1
            %tr
              %td
                = question.question
                = hidden_field_tag "#{tab}[#{row}][question]", question.question
              %td
                = select_tag "#{tab}[#{row}][answer]", options_for_select([["Select One", ""], "Yes", "No"]), :class => "sel_ans", :required => true
              %td
                = select_tag "#{tab}[#{row}][exception]", options_for_select(1..30), :prompt => "Select"
              %td
                = text_area_tag "#{tab}[#{row}][notes]", "", :class => "normal aut_sz", :style => "overflow: hidden; word-wrap: break-word; resize: none; height: 43px;"
      = link_to "Next", "#", :class => "btn btn-default btn-sm btn-info pull-right", :id => "hd_ad"
      %br
    
    .est_dec{:style => "display:none;"}
      %table.table
        %tr
          %th Question
          %th Answer
          %th Impact
          %th Amount
          %th Notes
        - @questions2.each do |questions|
          - tab += 1
          %tr
            %td
              %b
                = questions[0]
          - questions[1].each do |question|
            - row += 1
            %tr
              %td
                = question.question
                = hidden_field_tag "#{tab}[#{row}][ext_question]", question.question
              %td
                = select_tag "#{tab}[#{row}][ext_answer]", options_for_select([["Select One", ""], "Yes", "No"]), :class => "sel_est"
              %td
                = select_tag "#{tab}[#{row}][impact]", options_for_select([["Select One", ""], "Over", "Under"])
              %td
                = text_field_tag "#{tab}[#{row}][amount]"
              %td
                = text_area_tag "#{tab}[#{row}][ext_notes]", "", :class => "normal aut_sz", :style => "overflow: hidden; word-wrap: break-word; resize: none; height: 43px;"
      = link_to "Prev", "#", :class => "btn btn-default btn-sm btn-success", :id => "sh_ad"
      = f.submit "Update", :class => "btn btn-default btn-sm btn-info pull-right", :id => "su_btn"
